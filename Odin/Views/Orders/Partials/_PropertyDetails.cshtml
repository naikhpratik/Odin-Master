                        @Html.DisplayNameFor(model => model.PropertySquareFootage)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PropertySquareFootage)
                    </dd>
                </div>

                <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.PropertyAmount)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PropertyAmount)
                    </dd>
                </div>
            </div>
        </dl>

        <div class="col-md-12">
            <dl>
                <dt>
                    @Html.DisplayNameFor(model => model.PropertyDescription)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.PropertyDescription)
                </dd>
            </dl>
        </div>
    </div>
