        </div>

        <dl class="dl-vertical col-md-4">

            <div class="row">
                <div class="col-md-12">
                    <dt>
                        @Html.DisplayNameFor(model => model.PropertyAddress)
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.PropertyAddress)
                    </dd>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <dt>
                        @Html.DisplayNameFor(model => model.PropertyNumberOfBedrooms)
                    </dt>

                    <dd>
