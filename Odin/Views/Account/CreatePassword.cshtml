@model Odin.ViewModels.Authentication.CreatePasswordViewModel
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_ForgotPassword.cshtml";
}

<div class="row">
    <div class="col">
        @using (Html.BeginForm("CreatePassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()

            <div id="caption">
                <span>@ViewBag.Title your</span><span id="pw"> Password</span>
            </div>

            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            @Html.HiddenFor(model => model.UserId, (string)ViewBag.UserId)

            <div id="group-blk">
                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control" })
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-10 control-label" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "form-control" })
                        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-10 control-label" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-10">
                        <input type="submit" value="Reset" class="btn btn-default" />
                    </div>
                    <br />
                </div>
            </div>
        }

        @Html.Partial("~/Views/Shared/Partials/_logo.cshtml")
    </div>
</div>

@Styles.Render("~/Styling/forgotpw")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
