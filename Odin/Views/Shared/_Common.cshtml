<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container body-content">
        <div id="main">
            <div id="caption">
                <img src="~/Content/Images/dwellworks_icon.png" />
                <p>&nbsp;</p>
                <p>Odin</p>
            </div>
            <div id="icons">
                <div>
                    <img src="~/Content/Images/icn_message_2.png" />
                    <img src="~/Content/Images/icn_profile.png" />
                    <img src="~/Content/Images/icn_notification_2.png" />
                    <img src="~/Content/Images/icn_calender_2.png" />
                </div>
            </div>
            @RenderBody()
         </div>
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Dwellworks</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/lib")
    @Scripts.Render("~/bundles/app")
    @RenderSection("scripts", required: false)
</body>
</html>
